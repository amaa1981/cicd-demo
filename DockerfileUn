FROM mcr.microsoft.com/dotnet/core/sdk:2.1 AS builder

WORKDIR /unicare
COPY . .
RUN dotnet publish -c Release

FROM mcr.microsoft.com/dotnet/core/aspnet:2.1 AS runtime

WORKDIR /app/unicare
COPY --from=builder /unicare/UniCare/bin/Release/netcoreapp2.1/publish /app/unicare

ENTRYPOINT ["dotnet", "UniCare.dll"]
